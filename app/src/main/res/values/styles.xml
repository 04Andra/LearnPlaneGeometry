<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppButton" parent="Theme.AppCompat.Light">
        <item name="android:background">@drawable/rounded_style</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/my_font</item>
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">55dp</item>
    </style>

    <style name="TransparentButton" parent="Theme.AppCompat.Light">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/my_font</item>
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">55dp</item>
    </style>

    <style name="Spinner" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="backgroundTint">@color/white</item>
    </style>


</resources>