<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".DimensionScreen">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="281dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="64dp"
        android:layout_marginTop="124dp"
        android:fontFamily="@font/my_font"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        android:textSize="36sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/dimensionText"
        android:layout_width="314dp"
        android:layout_height="46dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="168dp"
        android:autofillHints="username"
        android:backgroundTint="@color/white"
        android:drawableStart="@drawable/edit_icon"
        android:drawablePadding="8dp"
        android:ems="2"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/white"
        app:layout_constraintHeight="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/titleText" />

    <EditText
        android:id="@+id/dimensionText2"
        android:layout_width="314dp"
        android:layout_height="46dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="232dp"
        android:autofillHints="username"
        android:backgroundTint="@color/white"
        android:drawableStart="@drawable/edit_icon"
        android:drawablePadding="8dp"
        android:ems="2"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/white"
        android:visibility="invisible"
        app:layout_constraintHeight="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/titleText" />

    <Button
        android:id="@+id/solveButton"
        style="@style/AppButton"
        android:layout_marginTop="220dp"
        android:text="@string/solveButton"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dimensionText2" />

</androidx.constraintlayout.widget.ConstraintLayout>